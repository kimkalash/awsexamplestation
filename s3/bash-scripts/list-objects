#!/usr/bin/env bash
#!/bin/bash
set -e
# Define the directory to store random files
OUTPUT_DIR="/tmp/s3-bash-scripts"

# Create the directory if it doesn't exist
mkdir -p "$OUTPUT_DIR"
rm -r $OUTPUT_DIR

# Generate 10 random files in the directory
for i in {1..10}; do
    FILENAME="$OUTPUT_DIR/file_$i.txt"
    # Generate random content and write it to the file
    head -c 512 </dev/urandom | base64 > "$FILENAME"
    echo "Created: $FILENAME"
done

# List the contents of the directory using `tree`
echo "ðŸ“‚ Listing files in local directory: $OUTPUT_DIR"
tree "$OUTPUT_DIR"

echo "âœ… 10 random files created successfully!"
